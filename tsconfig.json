{
    "extends": "@oathompsonjones/ts-config",
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "components/*": [
                "./src/components/*"
            ],
            "contexts/*": [
                "./src/contexts/*"
            ],
            "hooks/*": [
                "./src/hooks/*"
            ],
            "api/*": [
                "./src/app/api/*"
            ],
            "pages/*": [
                "./src/app/(pages)/*"
            ],
            "redirects/*": [
                "./src/app/(redirects)/*"
            ],
            "app/*": [
                "./src/app/*"
            ],
            "images/*": [
                "./src/images/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}